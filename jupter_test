# %%
list1 = ['a', 'b', 'c', 'd']
list2 = list1[:]
list2[1] = 'x'
print(list2)
# %%
print(list1)
# %%
list1 = ['a', 'b',['ab','ba']]
list2 = list1[:]
print(list1)
# %%
print(list2)
list2[0] = 'c'
list2[2][1] = 'd'
print(list1)
print(list2)
# %%
from copy import deepcopy
list2 = deepcopy(list1)
list2[2][1] = "d"
list2[0] = "c"
print(list2)
print(list1)


# %%
num = 0

def main():
    counter(num)

def counter(num):
    print(num)
    num += 1
    counter(num)
main()

